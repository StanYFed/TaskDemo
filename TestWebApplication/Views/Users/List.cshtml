<div class="actions">
    <a href="#/users/new" class="actions-item">Add new user</a>
</div>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th></th>
    </tr>

    <tr ng-repeat="user in users">
        <td>{{ user.FirstName }}</td>
        <td>{{ user.LastName }}</td>
        <td>{{ user.Email }}</td>
        <td class="actions">
            <div class="actions">
                <a href="#/users/{{user.Id}}/edit" class="actions-item">Edit</a>
                <a href="#" ng-click="onDelete(user); $event.preventDefault()" class="actions-item">Delete</a>
            </div>
        </td>
    </tr>
</table>
